<%= render partial: 'nav_bar' %>

<section>
  <h1>Top Customers</h1>
  <ol id="top_customers">
    <% @top_five_customers.each do |customer| %>
      <li id="<%= customer.first_name %>"><%= customer.last_name %>, <%= customer.first_name %> - <%= customer.number_transactions %></li>
    <% end %>
  </ol>
</section>

<section id="incomplete_invoices">
  <h1>Incomplete Invoices</h1>
  <ul id="invoice_id_not_shipped">
    <% @not_shipped_invoices.each do |invoice| %>
      <li class="invoice_<%= invoice.id %>"><%= link_to "Invoice ##{invoice.id}", admin_invoice_path(invoice.id) %> - <%= invoice.created_at.strftime("%A, %B %e, %Y") %></li>
    <% end %>
  </ul>
</section>
